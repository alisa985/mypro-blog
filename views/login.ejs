    <%- include('head',{}); %>
        <title>登录</title>
        <style>
            body {
                background-image: url('images/gufeng.jpg');
                background-repeat: no-repeat;
                background-size: 100%;
            }
        </style>
</head>

<body>
    <div class="layui-container" style="text-align: center;margin: 250px 400px;">
        <div class="layui-col-xs6 layui-col-sm6 layui-col-md4">
            <div class="layui-row">
                <div class="login" style="font-size: 20px;color: white;width: 450px;height: 100px;">
                    <h1>请登录</h1>
                </div>
                <form class="layui-form" action="/users/login" method="POST">
                    <div class="layui-form-item">
                        <label class="layui-form-label">用户名</label>
                        <div class="layui-input-block">
                            <input type="text" name="userName" required placeholder="请输入用户名" class="layui-input">
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">密码</label>
                        <div class="layui-input-block">
                            <input type="password" name="password" required class="layui-input">
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <div class="layui-input-block">
                            <button class="layui-btn layui-bg-cyan">登录</button>
                            <button type="reset" class="layui-btn layui-btn-primary">重置</button>
                            <li>没有账号，<a href="/zhuce">立即注册</a></li>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

</html>